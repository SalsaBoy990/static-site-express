{
  "name": "static-site-express",
  "version": "1.0.0",
  "description": "A simple Node.js based static site generator that uses EJS and Markdown",
  "main": "./app/build.js",
  "scripts": {
    "build-css": "postcss assets/css/main.css -o content/assets/css/main.css",
    "watch-css": "watch 'npm run build-css' ./content/pages ./content/layouts",
    "build-js": "webpack",
    "build": "node ./app/build.js",
    "heroku": "node ./app/build.js && node ./app/serve.js",
    "serve": "node ./app/serve.js",
    "watch-nodemon": "nodemon -L --watch ./content/layouts/ --watch ./content/pages/ --watch ./config/site.config.js ./app/build.js -e *",
    "watch-chokidar": "node ./app/watch.js -H localhost",
    "flow": "flow",
    "flow-status": "flow status",
    "transpile-flow": "babel site-generator/ -d app/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SalsaBoy990/static-site-express.git"
  },
  "keywords": [
    "Node.js",
    "Express",
    "ejs",
    "markdown",
    "SCSS",
    "static-site",
    "static site generator",
    "static files",
    "netlify",
    "heroku"
  ],
  "author": "András Gulácsi",
  "license": "MIT",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^10.4.8",
    "chalk": "4.1.1",
    "chokidar": "^3.5.3",
    "cssnano": "^5.1.12",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "flowbite": "^1.5.2",
    "front-matter": "^4.0.2",
    "fs-extra": "^10.1.0",
    "helmet": "^5.1.1",
    "helmet-csp": "^3.4.0",
    "markdown-it": "^13.0.1",
    "markdown-it-attrs": "^4.1.4",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-multimd-table": "^4.2.0",
    "markdown-it-podcast": "^0.2.3",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-video": "^0.6.3",
    "serve-favicon": "^2.5.0",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/preset-flow": "^7.18.6",
    "@tailwindcss/typography": "^0.5.4",
    "flow-bin": "^0.184.0",
    "postcss-import": "^14.1.0",
    "tailwindcss": "^3.1.8",
    "terser-webpack-plugin": "^5.3.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "bugs": {
    "url": "https://github.com/SalsaBoy990/static-site-express/issues"
  },
  "homepage": "https://github.com/SalsaBoy990/static-site-express#readme"
}
